{
  "manifest_version": 3,
  "name": "Prompt Navigator",
  "version": "0.1.0",
  "description": "Prompt-driven navigation via side panel.",
  "action": {
    "default_title": "Open Prompt Navigator"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "scripting",
    "debugger",
    "tabGroups",
    "activeTab",
    "windows",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["accessibility-tree.js"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["<all_urls>"],
      "js": ["recorder-content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.openai.com"
  }
}
